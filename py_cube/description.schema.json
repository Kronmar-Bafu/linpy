{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "Name": {
      "type": "object",
      "properties": {
        "de": { "type": "string" },
        "fr": { "type": "string" },
        "it": { "type": "string" },
        "en": { "type": "string" }
      },
      "required": ["de", "en"]
    },
    "Description": {
      "type": "object",
      "properties": {
        "de": { "type": "string" },
        "en": { "type": "string" }
      },
      "required": ["de", "en"]
    },
    "Publisher": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Publisher"
      }
    },
    "Creator": {
      "$ref": "#/definitions/Creator"
    },
    "Contributor": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Contributor"
      }
    },
    "Themes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Theme"
      }
    },

    "Date Created": {
      "type": "string",
      "format": "date-time"
    },
    "Contact Point": {
      "$ref": "#/definitions/ContactPoint"
    },
    "Base-URI": {
      "type": "string"
    },
    "Identifier": {
      "type": "string"
    },
    "Version": {
      "type": "number"
    },
    "Work Status": {
      "type": "string",
      "enum": ["Draft", "In Progress", "Published", "Obsolete"]
    },
    "Visualize": {
      "type": "boolean"
    },
    "Accrual Periodicity": {
      "type": "string",
      "enum": ["daily", "weekly", "monthly", "quarterly", "yearly"]
    },
    "Namespace": {
      "type": "string"
    },
    "dimensions": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "$ref": "#/definitions/Dimension"
        }
      },
      "additionalProperties": true
    }
  },

  "required": [
    "Name",
    "Description",
    "Publisher",
    "Creator",
    "Contributor",
    "Date Created",
    "Contact Point",
    "Base-URI",
    "Identifier",
    "Version",
    "Work Status",
    "Visualize",
    "Accrual Periodicity",
    "Namespace",
    "dimensions"
  ],
  "definitions": {
    "Publisher": {
      "type": "object",
      "properties": {
        "IRI": {
          "type": "string"
        }
      },
      "required": ["IRI"]
    },
    "Creator": {
      "type": "object",
      "properties": {
        "IRI": {
          "type": "string"
        },
        "Name": {
          "type": "string"
        }
      },
      "required": ["IRI"]
    },
    "Contributor": {
      "type": "object",
      "properties": {
        "IRI": {
          "type": "string"
        },
        "Name": {
          "type": "string"
        }
      },
      "required": ["IRI", "Name"]
    },
    "Theme": {
      "type": "object",
      "properties": {
        "IRI": {
          "type": "string"
        },
        "Name": {
          "type": "string"
        }
      },
      "required": ["IRI"]
    },
    "ContactPoint": {
      "type": "object",
      "properties": {
        "E-Mail": {
          "type": "string",
          "format": "email"
        },
        "Name": {
          "type": "string"
        }
      },
      "required": ["E-Mail", "Name"]
    },
    "Dimension": {
      "type": "object",
      "properties": {
        "name": {
          "type": "object",
          "properties": {
            "de": { "type": "string" },
            "fr": { "type": "string" },
            "it": { "type": "string" },
            "en": { "type": "string" }
          },
          "required": ["de", "en"]
        },
        "dimension-type": {
          "type": "string",
          "enum": ["Key Dimension", "Measure Dimension", "Standard Error"]
        },
        "data-kind": {
          "type": "object",
          "description": "See https://cube.link/#meta-datakind-temporal-spatial",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["temporal", "spatial-shape", "spatial-coordinates"]
            },
            "unit": {
              "type": "string"
            }
          }
        },
        "scale-type": {
          "description": "See https://cube.link/#qudt-scaletype",
          "type": "string",
          "enum": ["nominal", "ordinal", "interval", "ratio"]
        },
        "mapping": {
          "type": "object",
          "properties": {
            "value-type": {
              "type": "string",
              "enum": ["Shared", "Literal"]
            },
            "type": {
              "type": "string",
              "enum": ["regex", "lookup", "replace", "additive"]
            },
            "pattern": {
              "type": "string"
            },
            "replacement": {
              "type": "string"
            },
            "replacements": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "base": {
              "type": "string"
            }
          },
          "allOf": [
            {
              "if": {
                "properties": { "type": { "const": "regex" } }
              },
              "then": {
                "required": ["pattern", "replacement"]
              }
            },
            {
              "if": {
                "properties": { "type": { "const": "replace" } }
              },
              "then": {
                "required": ["replacements"]
              }
            },
            {
              "if": {
                "properties": { "type": { "const": "additive" } }
              },
              "then": {
                "required": ["base"]
              }
            }
          ]
        },
        "unit": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "dimension-type",
        "scale-type",
        "path",
        "description"
      ]
    }
  }
}
